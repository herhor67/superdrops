variables:
	{usuwac.rudy} = true

options:
#szansa bez fortuny:
	wegiel: 1.6
	diament: 0.2
	szmaragd: 0.3
	zloto: 0.4
	zelazo: 0.6
	lazuryt: 1.9
	redstone: 1.9
	kwarc: 1.9
	drewno: 2.7
 
#szansa z kilofem fortune I
	fortune1: 1.5
 
#szansa z kilofem forune II
	fortune2: 2
 
#szansa z kilofem fortune III
	fortune3: 2.5

#szansa superkilofem
	super: 10

#inneinfo:
	diamentmax: 16
	diamentmin: 9
	szmaragdmax: 128
	szmaragdmin: 60
	wegielmax: 128
	zelazomax: 64
	zlotomax: 32
	lapismax:32
	redstonemax: 16

#w co ma sie zamieniac ruda, jezeli wlaczone
	zamienw: stone
	zamienwnether: netherrack
	wiadomosc: &4Surowce wypadają ze stone!
	prefiks: &7[&cSuper&6Drop&7]

#ilosc expa za 1 blok
	xp: 1

aliases:
	diament = 57
	diamentitem = 264

on script load:
	wait 1 second
#------------#
	clear {superdrops::multiplier::*}   
	set {_config::*} to configuration section "multipliers" get of "plugins/Skript/superdrops/config.yml"
	loop {_config::*}:
		set {superdrops::multiplier::%loop-value%} to single value "multipliers.%loop-value%" get of "plugins/Skript/superdrops/config.yml" parsed as number
#------------#
	clear {superdrops::drop::*}   
	set {superdrops::drop::*} to configuration section "drop" get of "plugins/Skript/superdrops/config.yml"
	loop {superdrops::drop::*}:
		loop {superdrops::drop::%loop-value%::*}:
			set {_config::*} to configuration section "drop.%loop-value-1%.%loop-value-2%" get of "plugins/Skript/superdrops/config.yml"
				loop {_config::*}:
					set {superdrops::drop::%loop-value-1%::%loop-value-2%::%loop-value-3%}} to single value "multipliers.%loop-value%" get of "plugins/Skript/superdrops/config.yml" parsed as number
#------------#
	register new shaped recipe for diamond pickaxe named "&bSuperKilof" with lore "&7Fortune X" using diament, diament, diament, none, stick, none, none, stick, none
	register new shaped recipe for diamond pickaxe named "&bSuperKilof" with lore "&7Smelting I" using diamentitem, furnace. diamentitem, none, stick, none, none, stick, none

